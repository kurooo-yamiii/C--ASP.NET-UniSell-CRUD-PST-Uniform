@model WebUniform.ViewModel.DashboardViewModel

<table class="table">
    <thead class="thead-dark bg-dark text-light" style="border-bottom: 2px solid #115C39;">
        <tr>
            <th class="p-2 fs-4" scope="col">Recent Item Posted</th>
        </tr>
    </thead>
</table>

<div class="album py-2" style="background-color: #353839;">
    <div class="container">
        <h5 class="text-light">Slacks</h5>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @if (Model.Slacks == null || !Model.Slacks.Any())
    {
        <div class="col-md-4">
            <div class="card flex-md-row mb-4 box-shadow h-md-250 bg-dark text-white">
                <div class="card-body d-flex flex-column align-items-start">
                    <strong class="d-inline-block mb-2" style="color: #198754;">
                        No current Slacks Posted
                    </strong>
                    <h3 class="mb-negative-10">
                        <p class="text-white">
                            Get Started
                        </p>
                    </h3>
                   
                        <div class="mb-1 text-muted">N/A</div>
                   
                    <p class="d-inline-block mb-2" style="color: #198754;">Click the add Slacks button to add new Slacks</p>
                </div>
                <div class="card-body d-flex justify-content-center align-items-center col-xl-4 bg-light">
                    <img class="img-fluid" src="http://res.cloudinary.com/dky9pzz0r/image/upload/v1720858868/twir8si1gqwslow8fq7q.png" alt="Card image cap">
                </div>
            </div>
        </div>
    }
    else
    {
            @foreach (var item in Model.Slacks)
            {
                <div class="col-md-4">
                    <div class="card flex-md-row mb-4 box-shadow h-md-250 bg-dark text-white">
                        <div class="card-body d-flex flex-column align-items-start">
                            <strong class="d-inline-block mb-2" style="color: #198754;">
                                @(item.Address?.State ?? "Unknown State"),
                                @(item.Address?.City ?? "Unknown City")
                            </strong>
                            <h3 class="mb-negative-10">
                                <p class="text-white">
                                    Slacks
                                </p>
                            </h3>
                            @if (item.Status == null)
                            {
                                <div class="mb-1 text-muted">For Sale</div>
                            }
                            else
                            {
                                <div class="mb-1 text-muted">Sold</div>
                            }
                            <p class="card-text mb-auto">Waist : @item.Waist</p>
                            <p class="card-text mb-auto">Length : @item.Length</p>

                            <div class="d-flex mt-2">
                                <a type="button" asp-controller="Slack" asp-action="Detail" asp-route-id="@item.Id" class="d-inline-block mb-2" style="color: #198754;">View Details >></a>
                            </div>
                        </div>
                        <div class="card-body d-flex justify-content-center align-items-center col-xl-4 bg-light">
                            <img class="img-fluid" src="@item.Image" alt="Card image cap">
                        </div>
                    </div>
                </div>
            }
            }
        </div>
        <h5 class="text-light">Uniform</h5>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @if (Model.Uniforms == null || !Model.Uniforms.Any())
    {
        <div class="col-md-4">
            <div class="card flex-md-row mb-4 box-shadow h-md-250 bg-dark text-white">
                <div class="card-body d-flex flex-column align-items-start">
                    <strong class="d-inline-block mb-2" style="color: #198754;">
                        No current Uniform Posted
                    </strong>
                    <h3 class="mb-negative-10">
                        <p class="text-white">
                            Get Started
                        </p>
                    </h3>
                   
                        <div class="mb-1 text-muted">N/A</div>
                   
                    <p class="d-inline-block mb-2" style="color: #198754;">Click the add Uniform button to add new Uniform</p>
                </div>
                <div class="card-body d-flex justify-content-center align-items-center col-xl-4 bg-light">
                    <img class="img-fluid" src="http://res.cloudinary.com/dky9pzz0r/image/upload/v1720858868/twir8si1gqwslow8fq7q.png" alt="Card image cap">
                </div>
            </div>
        </div>
    }
    else
    {
            @foreach (var item in Model.Uniforms)
            {
                <div class="col-md-4">
                    <div class="card flex-md-row mb-4 box-shadow h-md-250 bg-dark text-white">
                        <div class="card-body d-flex flex-column align-items-start">
                            <strong class="d-inline-block mb-2" style="color: #198754;">
                                @(item.Address?.State ?? "Unknown State"),
                                @(item.Address?.City ?? "Unknown City")
                            </strong>
                            <h3 class="mb-negative-10">
                                <p class="text-white">
                                    Uniform
                                </p>
                            </h3>
                            @if (item.Status == null)
                            {
                                <div class="mb-1 text-muted">For Sale</div>
                            }
                            else
                            {
                                <div class="mb-1 text-muted">Sold</div>
                            }
                            <p class="card-text mb-auto">Shoulder : @item.Shoulder</p>
                            <p class="card-text mb-auto">Sleeve : @item.Sleeve</p>
                            <p class="card-text mb-auto">Length : @item.Length</p>

                            <div class="d-flex mt-2">
                                <a type="button" asp-controller="Uniform" asp-action="Detail" asp-route-id="@item.Id" class="d-inline-block mb-2" style="color: #198754;">View Details >></a>
                            </div>
                        </div>
                        <div class="card-body d-flex justify-content-center align-items-center col-xl-4 bg-light">
                            <img class="img-fluid" src="@item.Image" alt="Card image cap">
                        </div>
                    </div>
                </div>
            }
            }
        </div>

    </div>
</div>