@using WebUniform.ViewModel
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
<section class="h-80" style="background-color: #f0f0f0;">
    <div class="container py-3 h-100" style="background-color: #353839;">
        <div class="row d-flex justify-content-center align-items-center h-80">
            <div class="col-xl-8">
                <div class="card rounded-3 text-black" style="border-color: #353839;">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-2 mx-md-5"> 

                                <div class="text-center mt-3 mb-2">
                                    <img src="http://res.cloudinary.com/dky9pzz0r/image/upload/v1720858868/twir8si1gqwslow8fq7q.png"
                                         style="width: 90px;" alt="logo">
                                    <h4 class="mt-1 mb-2 pb-1">UniSell</h4>
                                </div>

                                <form asp-action="Login">
                                    <p>Please login to your account</p>
                                    @if (TempData["Error"] != null)
                                    {
                                        <div class="col-md-12 alert alert-danger">
                                            <span><b>Sorry!</b> - @TempData["Error"]</span>
                                        </div>
                                    }
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <label class="form-label" asp-for="Username">Username</label>
                                        <input asp-for="Username" type="email" id="form2Example11" class="form-control"
                                               placeholder="Email Address" />
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <label class="form-label" asp-for="Password" for="form2Example22">Password</label>
                                        <input asp-for="Password" ype="password" id="form2Example22" class="form-control" />
                                    </div>

                                    <div class="text-center pt-1 mb-3 pb-1">
                                        <input data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block fa-lg bg-dark mb-3" type="submit" value="Log in">
                                    </div>

                                    <div class="d-flex align-items-center justify-content-center pb-4">
                                        <p class="mb-0 me-2">Don't have an account?</p>
                                        <a asp-area="" asp-controller="Account" asp-action="Register" type="button" data-mdb-button-init data-mdb-ripple-init style="color: #198754;">Sign Up</a>
                                    </div>

                                </form>

                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center bg-dark">
                            <div class="text-center text-white px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4" style="color: #198754;">Want to post your uniforms and slacks?</h4>
                                <p class="small mb-0">
                                    Simply sign up by entering your credentials and log in 
                                    to the website to share your uniforms and slacks.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>