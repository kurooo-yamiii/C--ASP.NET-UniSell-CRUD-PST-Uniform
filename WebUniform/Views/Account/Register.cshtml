@using WebUniform.ViewModel
@model RegisterViewModel


@{
    ViewData["Title"] = "Sign Up";
}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
<section class="h-80" style="background-color: #f0f0f0;">
    <div class="container py-3 h-100" style="background-color: #353839;">
        <div class="row d-flex justify-content-center align-items-center h-80">
            <div class="col-xl-8">
                <div class="card rounded-3 text-black" style="border-color: #353839;">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="text-center">
                                <table class="table">
                                    <thead class="thead-dark bg-light">
                                        <tr>
                                            <th class="p-3 fs-5 text-dark" scope="col">Sign Up for New Account</th>
                                        </tr>
                                    </thead>
                                    </table>
                            </div>
                            <div class="card-body p-md-1 mx-md-5">
                                <form method="post" asp-action="Register">
                                    
                                    @if (TempData["Error"] != null)
                                    {
                                        <div class="col-md-12 alert alert-danger">
                                            <span><b>Sorry!</b> - @TempData["Error"] </span>
                                        </div>
                                    }

                                    @if (TempData["Success"] != null)
                                    {
                                        <div class="col-md-12 alert alert-success">
                                            <span>@TempData["Success"]</span>
                                        </div>
                                    }

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input asp-for="Username" type="email" class="form-control" placeholder="Personal Email Address" />
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input asp-for="Department" class="form-control" placeholder="Department"/>
                                        <span asp-validation-for="Department" class="text-danger"></span>
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input asp-for="Contact" class="form-control" placeholder="Mobile Number" />
                                        <span asp-validation-for="Contact" class="text-danger"></span>
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input asp-for="Name" class="form-control" placeholder="Full Name (e.g. Kenneth L. Cobarrubias)" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input asp-for="Password" ype="password" class="form-control" placeholder="Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input asp-for="ConfirmPassword" ype="password" class="form-control" placeholder="Confirm Password" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>

                                    <div class="text-center pt-1 mb-3 pb-1">
                                        <input data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block fa-lg bg-dark mb-3" type="submit" value="Sign Up">
                                    </div>

                                    <div class="d-flex align-items-center justify-content-center pb-4">
                                        <p class="mb-0 me-2">Already have an account?</p>
                                        <a asp-area="" asp-controller="Account" asp-action="Login" type="button" data-mdb-button-init data-mdb-ripple-init style="color: #198754;">Sign In</a>
                                    </div>

                                </form>

                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center bg-dark">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <div class="text-center mt-3 mb-2">
                                    <img src="http://res.cloudinary.com/dky9pzz0r/image/upload/v1720858868/twir8si1gqwslow8fq7q.png"
                                         class="img-fluid" alt="logo">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>